super + Return
      $TERMINAL
super + {i,r,m}
      $TERMINAL -e {gotop,lf,ncmpcpp}
super + w 
      $BROWSER
super + d 
      rofi -show drun
super + shift + d
      rofi -show run
super + n
      sxiv -tf ~/Pictures/Wallpapers
Print
      scrot -z ~/Pictures/Screenshots/$(date '+%y%m%d-%H%M-%S').png
super + x
      rofi-power

#Volume
XF86Audio{RaiseVolume,LowerVolume,Mute}
      volc {3,2,1}

#Mpc
XF86Audio{Play,Next,Prev,Stop}
      mpc {toggle,next,prev,stop}

#light
XF86MonBrightness{Down,Up}
	light -{U,A} 5
#      xbacklight -{dec,inc} 5

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

