super + Return
      $TERM
super + {i,r,m}
      alacritty -e {bashtop,ranger,ncmpcpp}
super + w 
      firefox
super + d 
      dmenu_run -l 8 -b

super + n
      sxiv -tf ~/Pictures/Wallpapers
Print
      maim ~/Pictures/Screenshots/$(date '+%y%m%d').png ; dunstify --icon="~/Pictures/Screenshots/$(date '+%y%m%d').png" "Screenschot taken" ;;

super + shift + x
      power-dmenu

#Volume
XF86Audio{RaiseVolume,LowerVolume,Mute}
    volc {up,down,mute}

XF86Audio{Play,Next,Prev,Stop}
      playerctl {play-pause,next,previous,stop}

#light
XF86MonBrightness{Down,Up}
      backlight {down,up}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
