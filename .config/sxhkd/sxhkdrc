super + Return
      $TERMINAL
super + {i,r,m}
      $TERMINAL -e {gotop,lf,ncmpcpp}
super + w 
      $BROWSER
super + d 
      dmenu_run
super + n
      sxiv -tf ~/Pictures/Wallpapers
Print
      scrot -z ~/Pictures/Screenshots/$(date '+%y%m%d-%H%M-%S').png
super + x
      i3-msg exit

#Volume
XF86Audio{RaiseVolume,LowerVolume}
      pulsemixer --change-volume {+5,-5}
XF86AudioMute
      pulsemixer --toggle-mute

#Mpc
XF86Audio{Play,Next,Prev,Stop}
      mpc {toggle,next,prev,stop}

#light
XF86MonBrightness{Down,Up}
	sudo light -{U,A} 5
#      xbacklight -{dec,inc} 5

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
