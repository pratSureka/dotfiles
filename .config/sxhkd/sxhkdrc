super + Return
      $TERMINAL
super + {i,r,m}
      $TERMINAL -e {bashtop,ranger,ncmpcpp}
super + w 
      firefox
super + d 
      dmenu_run -l 8 -b

super + n
      sxiv -tf ~/Pictures/Wallpapers
Print
      scrot -z ~/Pictures/Screenshots/$(date '+%y%m%d-%H%M-%S').png
super + shift + x
      power-dmenu

#Volume
XF86Audio{RaiseVolume,LowerVolume}
      pulsemixer --change-volume {+5,-5}
XF86AudioMute
      pulsemixer --toggle-mute

#Mpc
XF86Audio{Play,Next,Prev,Stop}
      playerctl {play-pause,next,previous,stop}

#light
XF86MonBrightness{Down,Up}
      xbacklight -{dec,inc} 5

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
